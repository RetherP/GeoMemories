<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoMemories.MainPage"
             xmlns:local="clr-namespace:GeoMemories"
             x:DataType="local:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout>
            <CollectionView ItemsSource="{Binding Trips}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="local:Trip">
                        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*">
                            <Label Grid.Row="0" Text="{Binding Name}"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding StartDate}"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding EndDate}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <VerticalStackLayout WidthRequest="200" >
                <Button Text="New Trip" Command="{Binding NewTripCommand}" Margin="10"/>
                <Button Text="Edit Trip" Command="{Binding EditTripCommand}" Margin="10"/>
                <Button Text="Details" Command="{Binding DeleteTripCommand}" Margin="10"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
